<div class="am-add-meals-container">

  <div class="am-divAroundForm">
    <div class="am-add-mealsForm">
      <div class="am-header">
        <h2>{{dayview}}</h2>
        <h2>{{meal}}</h2>

      </div>

      </h2>
      <form action="/add-meals/{{day}}/{{meal}}" method="POST">
        <label for="name">Name:</label>
        <input type="text" name="name" id="meal-name">
        <label for="i0">First ingredient:</label>
        <input type="text" name="i0" id="i0">
        <label for="i1">Second ingredient:</label>
        <input type="text" name="i1" id="i1">
        <label for="i2">Third ingredient:</label>
        <input type="text" name="i2" id="i2">
        <label for="i3">Fourth ingredient:</label>
        <input type="text" name="i3" id="i3">
        <label for="i4">Fifth ingredient:</label>
        <input type="text" name="i4" id="i4">
        <label for="i5">Sixth ingredient:</label>
        <input type="text" name="i5" id="i5">
        <label for="color">Color:</label>
        <div id="cp-weekdaycolor">
          <button id="cp-wdcolor1"></button>
          <button id="cp-wdcolor2"></button>
          <button id="cp-wdcolor3"></button>
          <button id="cp-wdcolor4"></button>
          <button id="cp-wdcolor5"></button>
          <button id="cp-wdcolor6"></button>
        </div>
        <button type="submit">Add</button>
      </form>
    </div>
  </div>
  <div class="am-mealsList">
    <h4>Mealslist</h4>
    <div class="am-singlemealslists">
      <h3>Breakfast</h3>
      <div class="wraplists">
        <ul>
          {{#each weekArray}}
          <li>
            {{#with (lookup ../plan @index)}}

            <form action="/copy/{{breakfast._id}}/{{../../day}}/{{../../meal}}" method="POST">
              <p>{{breakfast.name}} <button type="submit"> + </button></p>
            </form>
            {{/with}}
          </li>
          {{/each}}
        </ul>
      </div>
      <div class="am-singlemealslists">
        <h3>Morningsnack</h3>
        <div class="wraplists">
          <ul>
            {{#each weekArray}}
            <li>
              {{#with (lookup ../plan @index)}}
              <p>{{morningsnack.name}} <button type="submit"> + </button></p>
              <form action="/copy/{{morningsnack._id}}/{{../../day}}/{{../../meal}}" method="POST">
              </form>
              {{/with}}
            </li>
            {{/each}}
          </ul>
        </div>
        <div class="am-singlemealslists">
          <h3>Lunch</h3>
          <div class="wraplists">
            <ul>
              {{#each weekArray}}
              <li>
                {{#with (lookup ../plan @index)}}
                <p>{{lunch.name}} <button type="submit"> + </button></p>
                <form action="/copy/{{lunch._id}}/{{../../day}}/{{../../meal}}" method="POST">
                </form>
                {{/with}}
              </li>
              {{/each}}
            </ul>
          </div>
          <div class="am-singlemealslists">
            <h3>Afternoonsnack</h3>
            <br>
            <div class="wraplists">
              <ul>
                {{#each weekArray}}
                <li>
                  {{#with (lookup ../plan @index)}}
                  <p>{{afternoonsnack.name}} <button type="submit"> + </button></p>
                  <form action="/copy/{{afternoonsnack._id}}/{{../../day}}/{{../../meal}}" method="POST">
                  </form>
                  {{/with}}
                </li>
                {{/each}}
              </ul>
            </div>
            <div class="am-singlemealslists">
              <h3>Dinner</h3>
              <ul>
                {{#each weekArray}}
                <li>
                  {{#with (lookup ../plan @index)}}
                  <p>{{dinner.name}} <button type="submit"> + </button></p>
                  <form action="/copy/{{dinner._id}}/{{../../day}}/{{../../meal}}" method="POST">
                  </form>
                  {{/with}}
                </li>
                {{/each}}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<a href="/shoppinglist">Save your plan and proceed to shoppinglist</a>