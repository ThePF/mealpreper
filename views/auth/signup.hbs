<div class="signup-body">
  {{!-- <div class="navbar-wrapper"> --}}
  <a href="/" class="brand-logo">MEALPREP</a>
  <div class="section-wrapper">
    <section class="section">
      <h2 class="signup-heading">Sign Up</h2>
      <form class="form" action="/auth/signup" method="POST" id="form-container">
        <label for="username">New Username</label><br>
        <input id="username" type="text" name="username" placeholder="Your username goes here">

        <br><br>

        <label for="password">New Password</label><br>
        <input id="password" type="password" name="password" placeholder="Your best password here">
        <br>
        {{#if message }}
        <div class="error-message">{{ message }}</div>
        {{/if}}

        <br><br>


        <button class="signup-btn" type="submit">Sign Up</button>

        <p class="account-message">
          Do you already have an account?
          <a href="/auth/login">Login</a>
        </p>
      </form>
  </div>
</div>
</section>
</div>

