<div class="login-body">
  {{!-- <nav class="navbar-logsign"> --}}
  <div class="navbar-wrapper">
    <a href="/" class="brand-logo"><img id="logo" src="">MEALPREP</a>
  </div>
  </nav>
  <div class="section-wrapper">
    <section class="section">
      <h2 class="login-heading">Login</h2>
      <form class="form" action="/auth/login" method="POST" id="form-container">
        <label for="username">Username</label><br>
        <input id="username" type="text" name="username" placeholder="Your username goes here">

        <br><br>

        <label for="password">Password</label><br>
        <input id="password" type="password" name="password" placeholder="Your best password here">
        <br>
        {{#if message }}
        <div class="error-message">{{ message }}</div>
        {{/if}}

        <br><br>


        <a class="login-btn" href="/welcome">Login</a>

        <p class="account-message">
          Don't have an account yet?
          <a href="/auth/signup">Signup</a>
        </p>
      </form>
      <div class="social-logins">
        <span>Login with </span><a href="/auth/facebook">Facebook</a><span> | </span> <span>Login with</span> <a
          href="/auth/google"> Google</a>




    </section>
  </div>
</div>

