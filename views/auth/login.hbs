<div class="login-body">
  <nav class="navbar">
    <div class="navbar-wrapper">
      <a href="/" class="brand-logo"><img id="logo" src="">MEALPREP</a>
    </div>
  </nav>
  <div class="section-wrapper">
    <section class="section">
      <h2 class="login-heading">Login</h2>
      <form class="form" action="/auth/login" method="POST" id="form-container">
        <label for="username">Username</label><br>
        <input id="username" type="text" name="username" placeholder="Your username goes here">

        <br><br>

        <label for="password">Password</label><br>
        <input id="password" type="password" name="password" placeholder="Your best password here">
        <br>
        {{#if message }}
        <div class="error-message">{{ message }}</div>
        {{/if}}

        <br><br>


        <button class="login-btn">Login</button>

        <p class="account-message">
          Don't have an account yet?
          <a href="/auth/signup">Signup</a>
        </p>
      </form>
      <a href="/auth/facebook">Login with facebook</a>

    </section>
  </div>
</div>